    "custom/space",
    "bluetooth",
    "custom/space",
    "network",
    "custom/space",
    "custom/power",
    "custom/r_end",
    "custom/padd",
  ],

  "custom/arch": {
    "format": "ÔåÉ ",
    "tooltip": true,
    "tooltip-format": "Open Arch Wiki",
    "on-click": "pkill wofi || wofi -s ~/.config/wofi/menu.css",
  },

  "custom/wallchange": {
    "format": "‚õ∞Ô∏è{}",
    "rotate": 0,
    "exec": "echo ; echo ‚õ∞Ô∏è switch wallpaper",
    "on-click": "~/dotfiles/config/scripts/swww.sh",
    "on-click-right": "~/dotfiles/config/scripts/swww.sh switch",
    "interval": 86400,
    "tooltip": true,
  },

  "custom/screenshot": {
    "format": "üì∏",
    "on-click": "~/.config/wofi/screenshotmenu",
    "tooltip": true,
    "tooltip-format": "üì∏ Take a screenshot",
  },

  "custom/update": {
    "format": "üöÄ",
    "tooltip": true,
    "tooltip-format": "üöÄ Update system",
    "on-click": "kitty bash ~/dotfiles/config/scripts/update.sh",
  },

  "cpu": {
    "format": "Ôãõ   {usage}% ",
    "tooltip-format": "CPU Usage: {usage}%\nCores: {cores}",
    "tooltip": true,
    "interval": 1,
  },

  "memory": {
    "format": "ÔÇ†   {used}/{total} GB ({percentage}%)",
    "tooltip-format": "Used: {used} GB\nTotal: {total} GB\nUsage: {percentage}%",
    "tooltip": true,
    "interval": 1,
    "exec": "free -h | awk '/^Mem:/ {print $3 \" / \" $2 \" GB\", $3/$2*100}' | awk '{print $1, $2, $3}'",
    "format-alt": "{used}/{total} GB ({percentage}%)",
  },

  "disk": {
    "format": "ÔÇ†   {percentage_used}%",
    "tooltip-format": "Used: {used} GB\nTotal: {total} GB\nFree: {free} GB\nUsage: {percentage_used}%",
    "tooltip": true,
    "interval": 1,
    "exec": "df -h --output=used,size,avail | awk 'NR==2 {print $1, $2, $3, $1/$2*100}'",
    "format-alt": "{used}/{total} GB ({free} GB free, {percentage_used}%)",
  },

  "hyprland/workspaces": {},

  "wlr/taskbar": {
    "format": "{icon}",
    "rotate": 0,
    "icon-size": 18,
    "icon-theme": "Tela-circle-dracula",
    "spacing": 0,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": ["Alacritty"],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition",
    },
  },

  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20,
    },
    "format": "{icon} {capacity}%",
    "rotate": 0,
    "format-charging": "Ôá¶  {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "format-alt": "{time} {icon}",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
  },

  "clock": {
    "format": "<span color='#b4befe'>ÔÄó   </span>{:%I:%M %p}",
    "rotate": 0,
    "format-alt": "ÔÄó{:%R Û∞É≠ %d¬∑%m¬∑%y}",
    "tooltip-format": "<span>{calendar}</span>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b>{}</b></span>",
      },
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
    },
  },

  "backlight": {
    "device": "intel_backlight",
    "rotate": 0,
    "format": "{icon}  {percent}%",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
    "on-scroll-up": "brightnessctl set 1%+",
    "on-scroll-down": "brightnessctl set 1%-",
    "min-length": 6,
  },

  "pulseaudio": {
    "format": "{icon}   {volume}",
    "rotate": 0,
    "format-muted": "üîá",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
    "tooltip-format": "{icon} {desc} // {volume}%",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
    },
  },

  "bluetooth": {
    "format": "<span color='#b4befe'>Ôäî</span> {status}",
    "format-disabled": "<span color='#b4befe'>Ôäî Off</span>",
    "format-connected": "<span color='#b4befe'>Ôäî</span> {device_alias}",
    "tooltip-format": "{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}   {device_address}",
    "on-click": "blueman-manager",
  },

  "network": {
    "interface": "wlo1",
    "format": "{ifname}",
    "format-wifi": "<span color='#b4befe'>Ôá´    </span>{essid}",
    "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "format-disconnected": "<span color='#b4befe'>Û∞ñ™ </span>No Network",
    "tooltip-format": "{status}  // {ip}",
    "tooltip": true,
    "on-click": "nm-connection-editor",
  },

  "custom/power": {
    "format": "ÔÄë {}",
    "rotate": 0,
    "exec": "echo ; echo üå™Ô∏è shutdown",
    "interval": 86400,
    "on-click": "~/.config/wofi/powermenu",
